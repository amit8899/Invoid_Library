<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/purple_500"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Verify ID"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/wavy_tech"
            android:layout_marginVertical="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We need to verify your ID"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="In order to take you further we need to verify that its you. You just need to go through some steps which will ensure a secure system for you."
            android:textColor="#A9B3B3"
            android:textSize="15sp"
            android:layout_marginHorizontal="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/btn_verify"
            android:text="Verify"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="I don't have my ID with me"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>