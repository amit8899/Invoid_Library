<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the type of document you wish to scan"
        android:textColor="#424141"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We need to verify if an identity document is authentic and belongs to you."
        android:textColor="#A9B3B3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/verified"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_doc"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/white_bg"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/verified" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="ID verified"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:background="#fff"
            android:id="@+id/passport"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Passport"
                android:textColor="#424141"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:background="#fff"
            android:id="@+id/Driving"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Driving License"
                android:textColor="#424141"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:background="#fff"
            android:id="@+id/adhar"
            android:layout_marginVertical="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Aadhar Card"
                android:textColor="#424141"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:text="Done"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:visibility="gone"/>
</LinearLayout>